{
    "apps": [
      {
        "name": "shopApi",
        "cwd": "./dist",
        "script": "server.js",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "log/node-app/node-shopApi.stderr.log",
        "out_file": "log/node-shopApi.stdout.log",
        "pid_file": "pids/node-shopApi-api.pid",
        "instances": 1,
        "min_uptime": "200s",
        "max_restarts": 10,
        "max_memory_restart": "100M",
        "cron_restart": "0 0 1 * * *",
        "watch": false,
        "merge_logs": true,
        "exec_interpreter": "node",
        "exec_mode": "cluster_mode",
        "autorestart": false,
        "vizion": false
      }
    ]
  }
